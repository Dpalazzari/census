<div class="container">
  <h1>Admin Dashboard</h1>
  <%= link_to "Invite People", new_invitation_path, class: "btn btn-primary" %>
  <h3>Pending Invitations</h3>
  <div class="container" id="pending-invitations">
    <table class="table table-hover">
      <tr>
        <th>Email</th>
        <th>Status</th>
        <th>Created at</th>
        <th>Actions</th>
      </tr>
      <%= Invitation.all.each do |invite| %>
        <tr>
          <td><%= invite.email %></td>
          <td><%= invite.status %></td>
          <td><%= invite.created_at.to_date %></td>
          <td>
            <div class="btn-group" role="group">
              <%= link_to "Resend",
                  invitation_path(invite),
                  method: 'put',
                  class: 'btn-default' %>
              <%= link_to "Cancel",
                  invitation_path(invite),
                  method: 'delete',
                  class: 'btn-default' %>
            </div>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
