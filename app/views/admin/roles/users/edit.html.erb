<div class="admin-edit-user-roles">

    <div class="input-group search-group">
      <input type="text" class="form-control" placeholder="Find Users" id="searchBox">
      <span class="input-group-btn" style="width:0;">
        <button class="btn btn-default" type="button" id="submitButton"><i class="glyphicon glyphicon-search"></i></button>
      </span>
    </div>

  <div class="row">
    <table id="user-role-search" class="table table-hover role-table" data-toggle="table">
      <thead>
        <tr>
          <th><input type="checkbox" id="checkAll"></input></th>
          <th data-sortable="true">First</th>
          <th data-sortable="true">Last</th>
          <th data-sortable="true">Cohort</th>
          <th data-sortable="true">Roles</th>
        </tr>
      </thead>
      <tbody>

      </tbody>

    </table>
  </div>

  <div class="row">
    <select id="add-delete-role">
      <option value="Add">Add Role(s)</option>
      <option value="Delete">Remove Role(s)</option>
    </select>
  </div>

  <div class="row" id="role-check-boxes">
    <% @roles.each do |role| %>
      <input type="checkbox" data-role-id="<%=role.id%>" id="role-<%=role.id%>" value="role-<%=role.name%>"> <label><%= role.name %></label>
    <% end %>
  </div>

  <div class="row">
    <button class="btn btn-default btn-xs" type="button" id="save-button">Save</button>
  </div>

</div>
