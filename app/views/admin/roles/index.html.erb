<div class="container">
  <h1>Roles</h1>
  <div class="container">
      <%= form_for @role, url: admin_roles_path do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <%= f.submit "Create Role", class:"btn btn-primary btn-xs" %>
      <% end %>
  </div>
  <div class="container" id="active-roles">
    <%= render 'shared/roles_table', roles: @roles %>
  </div>
</div>
